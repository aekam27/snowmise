{
  "include": [
    "pkg/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "noImplicitReturns": true,
  }
}
